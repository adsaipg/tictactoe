<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adarsh.tictactoe.nameActivity">
    <TextView
        android:id="@+id/textid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Player 1:"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/playerid1"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textid1"
        />
    <TextView
        android:id="@+id/textid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Player 2:"
        android:textSize="20dp"
        android:layout_below="@+id/playerid1"
        />
    <EditText
        android:id="@+id/playerid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/textid2"
        />
    <Button
        android:id="@+id/proceedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_below="@+id/playerid2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="false"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/back_butn"
        android:fontFamily="casual"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        />
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="false"
        android:layout_toRightOf="@+id/proceedButton"
        android:layout_below="@+id/playerid2"
        android:layout_marginLeft="40dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/back_butn"
        android:fontFamily="casual"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        />


</RelativeLayout>
